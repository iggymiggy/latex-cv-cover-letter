% Color Theme System
%-------------------------
% Color theme variables allow easy customization of document colors
% Companies can override these to create brand-aligned CVs
% Default theme: Professional gray (maintains current appearance)

% Primary color: Used for dates, locations, and secondary text
\newcommand{\cvthemeprimary}{gray}

% Accent color: Used for emphasis (name in header)
\newcommand{\cvthemeaccent}{black}

% Title color: Used for professional title (cvtitle) - slightly different from accent
\newcommand{\cvthemetitle}{black}

% Link color: Used for hyperlinks (email, phone, URLs)
\newcommand{\cvthemelink}{blue}

% Section color: Used for section headers (should be distinct from primary)
\newcommand{\cvthemesection}{black}

% Helper macro to apply theme colors
% \cvcolor{type}{content} - Applies theme color based on type
% @param #1: Color type (primary, accent, title, link, section)
% @param #2: Content to color
% @usage: \cvcolor{primary}{San Francisco, CA}
% Uses flat pattern for better readability (similar to \rendersectionbyname)
\newcommand{\cvcolor}[2]{%
  \def\tempcolortype{#1}%
  % Check each color type using flat pattern (mutually exclusive via \else)
  \def\tempcheck{primary}%
  \ifx\tempcolortype\tempcheck
    \textcolor{\cvthemeprimary}{#2}%
  \else
    \def\tempcheck{accent}%
    \ifx\tempcolortype\tempcheck
      \textcolor{\cvthemeaccent}{#2}%
    \else
      \def\tempcheck{title}%
      \ifx\tempcolortype\tempcheck
        \textcolor{\cvthemetitle}{#2}%
      \else
        \def\tempcheck{link}%
        \ifx\tempcolortype\tempcheck
          \textcolor{\cvthemelink}{#2}%
        \else
          \def\tempcheck{section}%
          \ifx\tempcolortype\tempcheck
            \textcolor{\cvthemesection}{#2}%
          \else
            \textcolor{\cvthemeprimary}{#2}% Default to primary if no match
          \fi
        \fi
      \fi
    \fi
  \fi
}
